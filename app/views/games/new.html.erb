<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>New Game</h1>
      <div>
        <ul class="list-inline">
          <% @letters.each do |letter| %>
          <li class="list-inline-item "> <div class="letter shadow-sm p-3 mb-5 rounded"> <%= letter %> </div></li>
          <% end %>
        </ul>
      </div>
      <p>What is the longest word you can find?</p>

      <form action="score" method="post" class="form-inline">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <div class="input-group input-group">
          <input type="text" name="word" class="form-control">
          <span class="input-group-btn">
            <input type="submit" value="Play" class="btn btn-primary">
          </span>
        </div>
      </form>
    </div>
  </div>
</div>

